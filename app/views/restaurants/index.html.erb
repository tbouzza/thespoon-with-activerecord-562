<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
  <%= link_to restaurant_path(restaurant) do %>
    <li class='card mt-3'>
      <%= restaurant.name %>
      <%= restaurant.rating %>
      <%= restaurant.address %>

      <%= link_to 'delete', restaurant_path(restaurant), method: 'delete', class: 'btn btn-danger' %>
      <%= link_to 'edit', edit_restaurant_path(restaurant), class: 'btn btn-warning' %>
    </li>
  <% end %>
  <% end %>
</ul>


<%= link_to 'Add Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
